<% content_for :page_title do %>
   Nuevo anuncio
<% end %>

<%= form_for @store_notice, url: main_app.store_notices_path do |f| %>
  <div class="form-group">
    <%= f.label 'Anuncio', :content %>
    <%= f.text_area :content, class: 'form-control', required: true, maxlength: 150 %>
  </div>

  <div class="form-group">
    <%= f.label :link %>
    <%= f.url_field :link, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Crear anuncio', class: 'btn btn-primary' %>
  </div>
<% end %>