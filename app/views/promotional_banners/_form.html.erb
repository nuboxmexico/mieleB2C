<%= form_for @promotional_banner, url: url_path, method: method_type, multipart: true do |f| %>
  
  <div class="form-group">
    <%= f.label :title, 'Título' %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :link, 'URL Asociada' %>
    <%= f.url_field :link, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :image, 'Imagen' %>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.label :mobile_image, 'Imagen para móviles' %>
    <%= f.file_field :mobile_image %>
  </div>

  <div class="form-group">
    <%= f.label :alt, 'Texto alternativo' %>
    <%= f.text_field :alt, class: 'form-control' %>
  </div>

  <% if params[:action] == 'new' %>
    <div class="form-group">
      <%= f.label :location, 'Ubicación' %>
      <%= f.select :location, options_for_select(PromotionalBanner.locations.keys, @promotional_banner.location), {}, {class: 'select2'} %>
    </div>
   
  <% end %>
   <div class="form-group">
      <%= f.label :active, 'Estado' %>
      <%= f.select :active, options_for_select(['Activo','Inactivo']) %>
    </div>

  <div class="form-group">
    <%= f.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>