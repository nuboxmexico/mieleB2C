    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-textfield-custom">
      <input class="mdl-textfield__input" type="text" name="order[coupon_code_custom]" id="order_coupon_code_custom">
      <label class="mdl-textfield__label" for="order_coupon_code_custom">CÃ³digo de descuento</label>
    </div>
    <div>
      
      <input type="hidden" value="<%=order.number%>" name="order[number]">
      <button class="btn btn-primary btn-sm" type="submit" id="apply-coupon-code">
        APLICAR
      </button>
    </div>
  <% end %>
