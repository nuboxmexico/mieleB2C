<div data-hook="admin_state_form_fields" class="row">
  <div class="row">
    <div class="col-md-6">
      	<%= f.field_container :name, class: ['form-group'] do %>
        	<%= f.label :name, Spree.t(:name) %>
        	<%= f.text_field :name, :class => 'form-control' %>
        	<%= f.error_message_on :name %>
      	<% end %>
    </div>
    <div class="col-md-6">
      	<%= f.field_container :abbr, class: ['form-group'] do %>
        	<%= f.label :abbr, Spree.t(:abbreviation) %>
        	<%= f.text_field :abbr, :class => 'form-control' %>
      	<% end %>
    </div>
  </div>

  <h6>Despacho</h6>
  <div class="row">
  	<div class="col-md-4">
    	<%= f.field_container :mda_a, class: ['form-group'] do %>
        	<%= f.label :mda_a, "1 producto MDA" %>
        	<%= f.text_field :mda_a, :class => 'form-control' %>
      	<% end %>
    </div>
    <div class="col-md-4">
    	<%= f.field_container :mda_b, class: ['form-group'] do %>
        	<%= f.label :mda_b, "2 a 5 productos MDA" %>
        	<%= f.text_field :mda_b, :class => 'form-control' %>
      	<% end %>
    </div>
    <div class="col-md-4">
    	<%= f.field_container :mda_c, class: ['form-group'] do %>
        	<%= f.label :mda_c, "6 o más productos MDA" %>
        	<%= f.text_field :mda_c, :class => 'form-control' %>
      	<% end %>
    </div>
  </div>
  <div class="row">
  	<div class="col-md-4">
    	<%= f.field_container :sda_a, class: ['form-group'] do %>
        	<%= f.label :sda_a, "1 producto SDA" %>
        	<%= f.text_field :sda_a, :class => 'form-control' %>
      	<% end %>
    </div>
    <div class="col-md-4">
    	<%= f.field_container :sda_b, class: ['form-group'] do %>
        	<%= f.label :sda_b, "2 a 5 productos SDA" %>
        	<%= f.text_field :sda_b, :class => 'form-control' %>
      	<% end %>
    </div>
    <div class="col-md-4">
    	<%= f.field_container :sda_c, class: ['form-group'] do %>
        	<%= f.label :sda_c, "6 o más productos SDA" %>
        	<%= f.text_field :sda_c, :class => 'form-control' %>
      	<% end %>
    </div>

  </div>
  <div class="row">
    <div class="col-md-12">
    <%= f.field_container :pai_a, class: ['form-group'] do %>
        <%= f.label :pai_a, "Productos PAI (AyC)" %>
        <%= f.text_field :pai_a, :class => 'form-control' %>
      <% end %>
    </div>
  </div>

  <h6>Instalación</h6>
  <div class="row">
  	<div class="col-md-4">
    	<%= f.field_container :inst_a, class: ['form-group'] do %>
        	<%= f.label :inst_a, "1 producto con Instalación" %>
        	<%= f.text_field :inst_a, :class => 'form-control' %>
      	<% end %>
    </div>
    <div class="col-md-4">
    	<%= f.field_container :inst_b, class: ['form-group'] do %>
        	<%= f.label :inst_b, "2 a 5 productos con Instalación" %>
        	<%= f.text_field :inst_b, :class => 'form-control' %>
      	<% end %>
    </div>
    <div class="col-md-4">
    	<%= f.field_container :inst_c, class: ['form-group'] do %>
        	<%= f.label :inst_c, "6 o más productos con Instalación" %>
        	<%= f.text_field :inst_c, :class => 'form-control' %>
      	<% end %>
    </div>
</div>