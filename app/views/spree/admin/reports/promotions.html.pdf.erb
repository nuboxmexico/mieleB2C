  <body>
	<br>
	<div class="container">
      <%= render 'spree/admin/reports/head', tittle: tittle %>
	  <br>
	  <% if promotions.any? %>
		<% i = 1 %>
		<table class="table">
		  <thead class="gradient" style="border: none;">
			<tr style="color: white;">
			  <th><%= Spree.t(:name) %></th>
        <th><%= Spree.t(:code) %></th>
        <th><%= Spree.t(:usage_limit) %></th>
      	<th>Ganancias</th>
			</tr>
		  </thead>
		  <tbody>
			<% promotions.each do |promotion| %>
			  <% if i < 20 %>
				<tr>
				  <td><%= promotion.name %> (<%= promotion.description %>)</td>
		          <td><%= promotion.code %></td>
		          <td><%= promotion.usage_limit.nil? ? "âˆž" : promotion.usage_limit  %> (<%= Spree.t(:current_promotion_usage, count: promotion.credits_count) %>)</td>
		        	<td>$ <%= number_to_currency(promotion.orders.sum(:total).to_i,precision: 0 ,unit: "", separator: "", delimiter: ".")%></td>
		        	<td></td>
				</tr>
			  <% else %>
				<% i = 1 %>
				  </tbody>
				</table>
				<div id="brake"></div>
				<br><br><br>
				<table class="table">
				  <thead>
					<tr>
					  <th><%= Spree.t(:name) %></th>
		        <th><%= Spree.t(:code) %></th>
		        <th><%= Spree.t(:usage_limit) %></th>
		      	<th>Ganancias</th>
					</tr>
				  </thead>
				  <tbody>
			  <% end %>
			  <% i+= 1 %>
			<% end %>
		  </tbody>
		</table>
	  <% else %>
		<div class="alert alert-info no-objects-found">
		  No existen registros en la base de datos
		</div>
	  <% end %>
	</div>
