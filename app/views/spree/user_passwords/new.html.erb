<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<div class="user-form-box col-xs-12 col-md-4 col-md-offset-4" id="forgot-password">
  <div class="user-form-container">
    <h1>
      <%= Spree.t(:forgot_password) %>
    </h1>
    <div class="panel-body">
      <p class="password-forgot-instructions">
        <%= Spree.t(:instructions_to_reset_password_message) %>
      </p>

      <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-textfield-custom">
          <%= f.text_field :email, class: 'mdl-textfield__input', required: true %>
          <%= f.label :email, class: 'mdl-textfield__label' do %>
            <%= Spree.t(:email_label) %>
          <% end %>
        </div>
        <div class="action-container">
          <%= f.submit Spree.t(:reset_password), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
