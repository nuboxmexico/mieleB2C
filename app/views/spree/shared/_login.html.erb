<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
  <fieldset id="password-credentials">
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-textfield-custom">
      <%= f.text_field :email, class: 'mdl-textfield__input' %>
      <%= f.label :email, class: 'mdl-textfield__label' do %>
        <%= Spree.t(:email_label) %>
      <% end %>
    </div>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  mdl-textfield-custom">
      <%= f.password_field :password, class: 'mdl-textfield__input' %>
      <%= f.label :password, class: 'mdl-textfield__label' do %>
        <%= Spree.t(:password) %>
      <% end %>
    </div>

    <%= f.label :remember_me, 
          class: 'mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect text-left' do %>
      <%= f.check_box :remember_me, class: 'mdl-checkbox__input' %>
      <span class="mdl-checkbox__label">
        <%= Spree.t(:remember_me) %>
      </span>
    <% end %>
    <div class="action-container">
      <%= f.submit Spree.t(:login_message), class: 'btn btn-primary', tabindex: 3 %>
    </div>
  </fieldset>
<% end %>
