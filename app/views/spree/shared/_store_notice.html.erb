<% if @store_notice %>
<div class="store-notice">
	<div>
		<%= inline_svg_tag('miele-icon-advertencia.svg', fill: '#1f1f1f') %>
		<div class="visible-xs">
			<%= @store_notice.content %> 
			<% if @store_notice.link and @store_notice.link != '' %>
			<%= link_to 'VER MÁS', @store_notice.link, target: '_blank', class:'visible-xs' %>
			<% end %>
		</div>
		<div class="hidden-xs">
			<%= @store_notice.content %> 
		</div>
	</div>
	<% if @store_notice.link and @store_notice.link != '' %>
	<%= link_to 'VER MÁS', @store_notice.link, target: '_blank', class:'hidden-xs' %>
	<% end %>
</div>
<% end %>